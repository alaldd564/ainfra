<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="RtlHardcoded,SpUsage"
    tools:layout_height="wrap_content"
    tools:layout_width="wrap_content"
    tools:parentTag="android.widget.FrameLayout">

    <TextView
        android:id="@+id/navermap_zero"
        android:layout_width="5dp"
        android:layout_height="13dp"
        android:layout_gravity="start"
        android:gravity="center_horizontal"
        android:text="@string/navermap_zero"
        android:textColor="@color/navermap_scale_bar_text_light"
        android:textSize="9dp"
        tools:layout_gravity="end" />

    <LinearLayout
        android:id="@+id/navermap_scale_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:gravity="end"
        android:orientation="horizontal"
        tools:gravity="end">

        <TextView
            android:id="@+id/navermap_value"
            android:layout_width="@dimen/navermap_scale_bar_min_width"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="@color/navermap_scale_bar_text_light"
            android:textSize="9dp"
            tools:gravity="start"
            tools:layout_width="wrap_content"
            tools:text="12345" />

        <TextView
            android:id="@+id/navermap_unit"
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:textColor="@color/navermap_scale_bar_text_light"
            android:textSize="9dp"
            tools:layout_width="@dimen/navermap_scale_bar_min_width"
            tools:text="km" />

    </LinearLayout>

    <View
        android:id="@+id/navermap_bar"
        android:layout_width="82dp"
        android:layout_height="6dp"
        android:layout_gravity="start"
        android:layout_marginStart="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/navermap_scale_bar_light"
        android:paddingStart="1dp"
        android:paddingEnd="1dp"
        tools:layout_gravity="end" />

</merge>
